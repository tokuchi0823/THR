<% provide(:title, @user.name) %>

<div>
 <table class="table table-bordered table-condensed user-table">
   <tr>
     <td>
        <%= link_to "←", user_path(params: {id: @user.id, first_day: @first_day.prev_month }),
                         class: "btn btn-xs btn-primary" %>
        &emsp;<%= l(@first_day, format: :middle) %> 時間管理表&emsp;
        <%= link_to "→", user_path(params: {id: @user.id, first_day: @first_day.next_month }),
                         class: "btn btn-xs btn-primary" %>
     </td>
     <td>指定勤務時間　<%= format_basic_info(@user.work_time) %></td>
     <td><%= format_basic_info(@user.basic_time) %>　基本時間</td>
     <td>初日：<%= l(@first_day, format: :short) %></td>
   </tr>
   <tr>
     <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
     <td>氏名　<%=@user.name%></td>
     <td>出勤日数：<%= @worked_sum %>日</td>
     <td>締め：<%= l(@last_day, format: :short) %></td>
  </tr>   
 </table>
</div>

<div>
 <table class="table table-bordered table-condensed table-hover" id="table-attendances">
   <thead>
      <tr> <!--rowspan:縦結合、colspan：横結合-->
        <th rowspan = "2">日付</th>
        <th rowspan = "2">曜日</th>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
   </thead>
   <tbody>
      <%  @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
         <td>
          <% if day.worked_on.wday == 6 %>
           <font color="Blue">土</font>
          <% elsif day.worked_on.wday == 0 %>
           <font color="RED">日</font>
          <% else %>
          <%= $days_of_the_week[day.worked_on.wday] %>
          <% end %>
          </td>
          <td><%= l(day.started_at, format: :only_time) if day.started_at.present? %></td>
          <td><%= l(day.started_at, format: :only_mi) if day.started_at.present? %></td>
          <td>  
          <% if day.worked_on == Date.today && day.started_at.nil? %>
           <%= link_to "出社", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %>
          </td>
          <td><%= l(day.finished_at, format: :only_time) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :only_time) if day.finished_at.present? %></td>
          <td>
          <% if day.worked_on == Date.today && day.started_at.present? && day.finished_at.nil? %>
           <%= link_to "退社", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %>
          </td>
          <td>
          <% if day.started_at.present? && day.finished_at.present? %>
           <%= str_times = working_times(day.started_at, day.finished_at) %>
           <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
      <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="6">総合勤務時間</td>
        <td>累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>
</div>
 

