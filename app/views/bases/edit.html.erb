<% provide(:title, 'Base Edit') %>
<h1>拠点情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>
      <%= f.label :"拠点番号", class: "label-signup" %>
      <%= f.text_field :base_no, class: "form-control" %>

      <%= f.label :"拠点名", class: "label-signup" %>
      <%= f.text_field :base_name, class: "form-control" %>

      <%= f.label :"勤怠種類", class: "label-signup" %>
      <%= f.text_field :base_type, class: "form-control" %>

      <%= f.submit "修正", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>